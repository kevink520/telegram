<div class="account create main clearfix">
	<div class="col-first-half">
		<h1>{{#link-to "index"}}<img class="img-responsive" src="/assets/images/telegram-logo.png" alt="Know what's happening - Telegram">{{/link-to}}</h1>
	</div>
	<div class="col-second-half">
		<h3>Create your account</h3>
		<form>
			{{input id="name" type="text" value=name placeholder="Enter your name ..."}}
			{{input id="username" type="text" value=username placeholder="Enter your username ..."}}
			{{input id="password" type="password" value=password placeholder="Enter your password ..."}}
			<div class="account-links clearfix">
				<button {{action "signUp"}} class="blue-btn">Sign up</button>
			  <div class="misc-links">{{#link-to "login"}}Login{{/link-to}}</div>
			</div>
		</form>
	</div>
</div>
